<div class="content-box">

  <h2>Create a team to join <%= @league.name %></h2>

  <%= form_for [@league, @team] do |f| %>

    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.submit %>
    </div>

  <% end %>

  <div class="new-team-back">
    <%= link_to "Back", @league %>
  </div>
</div>
