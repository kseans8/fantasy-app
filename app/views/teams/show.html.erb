<div class="team-show small-12 columns">
  <div class="team-title small-10 row">
    <%= @team.name %>
  </div>

  <% if !@players.empty? %>

    <div class="players-index small-10 row">
      <% @players.each do |player| %>
        <p class="player"> <%= link_to player.name, "/teams/#{@team.id}/players/#{player.id}" %> </p>
      <% end %>
    </div>

  <% elsif @team.user == current_user %>

    <div class="submit-draft">
      <%= link_to "draft players",  @team %>
    </div>

    <div id="draft"></div>
    <div class="team-id" id=<%= @team.id.to_s %>></div>

  <% else %>

    <div class="no-players small-12 row">
      <%= "#{@team.user.username} hasnt drafted yet" %>
    </div>

  <% end %>

  <div class="team-back small-12 row ">
    <%= link_to "back to league", @team.league %>
  </div>

</div>
